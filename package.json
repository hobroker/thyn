{
  "name": "thyn",
  "version": "0.1.0",
  "description": "Modularized framework",
  "author": "Igor Leahu <igor.leahu@gmail.com>",
  "repository": "github:hobroker/thyn",
  "license": "MIT",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "DEBUG=oxium* node src/index.js",
    "test": "jest --passWithNoTests",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint src src --ext .js --max-warnings 0 --fix"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "lodash": "^4.17.15",
    "monet": "^0.9.1",
    "mongoose": "^5.8.11",
    "oxium": "github:hobroker/oxium",
    "ramda": "^0.26.1",
    "ramda-adjunct": "^2.24.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,example}/**/*.{js,json}": [
      "eslint --max-warnings 0 --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node"
  }
}
